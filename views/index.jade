extends layout

block content
  h1= title
  p Welcome #{title}
  h1 Choose Payment Plan
  form(name="addProductForm", action="/shopify/createProduct", method="post")
    p Title
    input(type="text",name="title", id="idProductTitle")
    br
    input(type="submit", value="create product")  
    br
    br
  form(name="deleteProductForm", action="/shopify/deleteProduct", method="post")
    p Enter Id of Product u want to delete
    input(type="text",name="deleteId", id="idDeleteProduct")
    br
    input(type="submit", value="delete product")    
    br
    br
  form(name="recurringChargeForm", action="/shopify/createRecurringCharge", method="post")
    h2 Create New Recurring Charge
    p Enter Recurring Charge Name:
    input(type="text",name="name", id="idRecurringChargeName")
    p Enter Price:
    input(type="text",name="price", id="idRecurringChargePrice")
    br
    input(type="submit", value="Create Recurring Charge")     
  br
  br
  form(name="deleteRecurringChargeForm", action="/shopify/deleteRecurringCharge", method="post")
    p Enter Id of Recurring Charge u want to delete
    input(type="text",name="deleteId", id="idDeleteRecurringCharge")
    br
    input(type="submit", value="delete Recurring Charge")    
